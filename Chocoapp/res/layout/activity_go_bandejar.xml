<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GoBandejar" >

    <Button
        android:id="@+id/btn_fisica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_central"
        android:layout_below="@+id/btn_central"
        android:text="@string/rest_Fisica" />

    <Button
        android:id="@+id/btn_quimica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_fisica"
        android:layout_below="@+id/btn_fisica"
        android:text="@string/rest_Quimica" />

    <Button
        android:id="@+id/btn_prefeitura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_quimica"
        android:layout_below="@+id/btn_quimica"
        android:text="@string/rest_Prefeitura" />

    <Button
        android:id="@+id/btn_central"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="@string/rest_Central" />

</RelativeLayout>
